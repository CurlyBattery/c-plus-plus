<Page
    x:Class="pz22.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pz22"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">

    <Grid x:Name="ParentGrid" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock 
            Grid.Row="0"
            Text="Кофейня - оформление заказа"
            FontSize="24"
            Foreground="White"
            Margin="0,0,0,20"
            />

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <TextBlock 
                    Text="Выберите напитки: "
                    FontSize="18"
                    Foreground="White"
                    Margin="0,10,0,10"
                    />

                <CheckBox 
                    x:Name="chkEspresso"
                    Content="Эспрессо - 150 р"
                    Foreground="White"
                    Checked="UpdateTotal"
                    Unchecked="UpdateTotal"
                    RequestedTheme="Dark"
                    />

                <CheckBox 
                    x:Name="chkCappuccino"
                    Content="Капучино - 250 р"
                    Foreground="White"
                    Checked="UpdateTotal"
                    Unchecked="UpdateTotal"
                    RequestedTheme="Dark"
                    />

                <CheckBox 
                    x:Name="chkLatte"
                    Content="Латте - 220 р"
                    Foreground="White"
                    Checked="UpdateTotal"
                    Unchecked="UpdateTotal"
                    RequestedTheme="Dark"
                    />

                <TextBlock 
                     Text="Выберите десерты: "
                    FontSize="18"
                    Foreground="White"
                    Margin="0,20,0,10"
                    />

                <CheckBox 
                    x:Name="chkCroisant"
                    Content="Круасан - 120 р"
                    Foreground="White"
                     Checked="UpdateTotal"
                    Unchecked="UpdateTotal"
                    RequestedTheme="Dark"
                    />

                <CheckBox 
                    x:Name="chkBrownie"
                    Content="Брауни - 180 р"
                    Foreground="White"
                    Checked="UpdateTotal"
                    Unchecked="UpdateTotal"
                    RequestedTheme="Dark"
                    />

                <TextBlock 
                    Text="Выьберите размер: "
                    FontSize="18"
                    Foreground="White"
                    Margin="0,20,0,10"  
                    />

                <RadioButton 
                    x:Name="rbSmall"
                    GroupName="size"
                    Content="Маленький +0 р"
                    Foreground="White"
                    IsChecked="True"
                    Checked="UpdateTotal"
                    RequestedTheme="Dark"
                    />
                <RadioButton 
                    x:Name="rbMedium"
                    GroupName="size"    
                    Content="Средний +50 р"
                    Foreground="White"
                    Checked="UpdateTotal"
                    RequestedTheme="Dark"
                    />

                <RadioButton 
                    x:Name="rbLarge"
                    GroupName="size"
                    Content="Большой +100 р"
                     Foreground="White"
                    Checked="UpdateTotal"
                    RequestedTheme="Dark"
                    />
                
            </StackPanel>
        </ScrollViewer>

        <Grid 
            Grid.Row="2"
            Background="#333333"
            Padding="15"
            Margin="0,20,0,0"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Column="0"
                Text="Итого к оплате:"
                FontSize="20"
                Foreground="White"
                VerticalAlignment="Center"
                />

            <TextBlock 
                Grid.Column="1"
                x:Name="txtTotal"
                Text="0"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#4CAF50"
                VerticalAlignment="Center"
                />

        </Grid>
    </Grid>
</Page>
