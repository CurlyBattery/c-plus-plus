<Page
    x:Class="pz23.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pz23"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#2c2c2c" Padding="10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:ConnectionId='4'
                Grid.Column="0"
                x:Name="btnBack"
                Content="◀"
                                     
                Width="40"
                Height="40"
                Margin="0,0,5,0"
                Background="#444444"
                Foreground="White"
                />

            <Button x:ConnectionId='5' 
                Grid.Column="1"
                x:Name="btnForward"
                                        
                Content="▶"
                Width="40"
                Height="40"
                Margin="0,0,5,0"
                Background="#444444"
                Foreground="White"
                />

            <TextBox x:ConnectionId='6' 
                Grid.Column="2"
                x:Name="txtUrl"
                Height="40"
                VerticalAlignment="Center"
                PlaceholderText="Введите URL адрес..."
                Text="https://www.microsoft.com"
                Margin="0,0,10,0"
                Background="White"
                />

            <Button x:ConnectionId='7' 
                Grid.Column="3"
                Content="Перейти"
                Width="80"
                                   
                Height="40"
                Margin="0,0,5,0"
                Background="#444444"
                Foreground="White"
                />

            <DropDownButton x:ConnectionId='8' 
                Grid.Column="4"
                x:Name="btnBookmarks"
                Content="★ Закладки"
                Height="40"
                Background="#444444"
                Foreground="White"
                >
                <DropDownButton.Flyout>
                    <MenuFlyout x:ConnectionId='9'
                        x:Name="bookmarksFloyout" Placement="Bottom"
                        >
                        <MenuFlyoutItem x:ConnectionId='10' 
                            Text="Добавить в закладки"
                            Icon="Add"
                                                     
                            />
                        <MenuFlyoutSeparator/>
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
        </Grid>
        <Grid Grid.Row="1">
            <WebView x:ConnectionId='2'
                x:Name="webView"
                Source="https://www.microsoft.com"
                                                               
                                                                 
                                                       
                />
            <ProgressBar x:ConnectionId='3' 
                x:Name="progressBar"
                VerticalAlignment="Top"
                IsIndeterminate="True"
                Visibility="Collapsed"
                Height="4"
                Foreground="#007804"
                />
        </Grid>
    </Grid>
</Page>

