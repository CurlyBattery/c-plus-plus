<Page
    x:Class="pz23.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pz23"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#2c2c2c" Padding="10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                x:Name="btnBack"
                Content="◀"
                Click="btnBack_Click"
                Width="40"
                Height="40"
                Margin="0,0,5,0"
                Background="#444444"
                Foreground="White"
                />

            <Button 
                Grid.Column="1"
                x:Name="btnForward"
                Click="btnForward_Click"
                Content="▶"
                Width="40"
                Height="40"
                Margin="0,0,5,0"
                Background="#444444"
                Foreground="White"
                />

            <TextBox 
                Grid.Column="2"
                x:Name="txtUrl"
                Height="40"
                VerticalAlignment="Center"
                PlaceholderText="Введите URL адрес..."
                Text="https://www.microsoft.com"
                Margin="0,0,10,0"
                Background="White"
                />

            <Button 
                Grid.Column="3"
                Content="Перейти"
                Width="80"
                Click="btnGo_Click"
                Height="40"
                Margin="0,0,5,0"
                Background="#444444"
                Foreground="White"
                />

            <DropDownButton 
                Grid.Column="4"
                x:Name="btnBookmarks"
                Content="★ Закладки"
                Height="40"
                Background="#444444"
                Foreground="White"
                >
                <DropDownButton.Flyout>
                    <MenuFlyout
                        x:Name="bookmarksFloyout" Placement="Bottom"
                        >
                        <MenuFlyoutItem 
                            Text="Добавить в закладки"
                            Icon="Add"
                            Click="AddBookmark_Click"
                            />
                        <MenuFlyoutSeparator/>
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
        </Grid>
        <Grid Grid.Row="1">
            <WebView
                x:Name="webView"
                Source="https://www.microsoft.com"
                NavigationStarting="webView_NavigationStarting"
                NavigationCompleted="webView_NavigationCompleted"
                ContentLoading="webView_ContentLoading"
                />
            <ProgressBar 
                x:Name="progressBar"
                VerticalAlignment="Top"
                IsIndeterminate="True"
                Visibility="Collapsed"
                Height="4"
                Foreground="#007804"
                />
        </Grid>
    </Grid>
</Page>
