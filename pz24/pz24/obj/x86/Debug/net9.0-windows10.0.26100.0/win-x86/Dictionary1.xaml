<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#2C2C2C"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#444444"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="White"/>
    <SolidColorBrush x:Key="ProgressBrush" Color="#0078D4"/>

    <Style x:Key="NavigationButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    
    <Style x:Key="GoButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="80"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="UrlTextBoxStyle" TargetType="TextBox">
        <Setter Property="Height" Value="40"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="10,0,0,0"/>
    </Style>

    <Style x:Key="BookmarksButtonStyle" TargetType="DropDownButton">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="ToolbarGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource DarkBackgroundBrush}"/>
        <Setter Property="Padding" Value="10"/>
    </Style>

    <Style x:Key="LoadingProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="IsIndeterminate" Value="True"/>
        <Setter Property="Height" Value="4"/>
        <Setter Property="Foreground" Value="{StaticResource ProgressBrush}"/>
    </Style>

</ResourceDictionary>

